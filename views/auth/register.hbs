<main class="site-main vcenter">
  <div class="container padding">
    <form id="auth" action="/register" method="POST">
      <h1>Register</h1>
      <input type="text" name="username" placeholder="Username" required>

      <input type="password" id="password" name="password" placeholder="Password" required>

      <input type="text" id="firstname" name="firstname" placeholder="First name (optional)">
      {{#if errorMessage}}
      <div class="error-message">{{ errorMessage }}</div>
      {{/if}}
      <button class="iconBtn">Get started <i class="fas fa-arrow-right"></i></button>
    </form>
  </div>
</main>